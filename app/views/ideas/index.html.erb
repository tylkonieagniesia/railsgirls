<h1>Listing ideas</h1>
<%= link_to 'New Idea', new_idea_path , class: "btn btn-primary btn-lg"%>

<table class="table table-bordered">

  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Picture</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.category.name if idea.category present? %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag(idea.picture_url, :width=>100) if idea.picture.present? %>
</td> 
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

